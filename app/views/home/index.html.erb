<div class="flex items-center justify-center p-8 m-8 rounded-xl bg-gray-400 shadow-xl w-96">
<%= form_tag(result_path, method: :get, class: "flex flex-col gap-5 justify-center items-center p-4 text-center") do %>
    <div class="flex flex-col justify-center items-center">
      <%= label_tag :text_prompt, "Enter a text prompt" %><br>
      <%= text_field_tag :text_prompt, nil, class: 'rounded border-0 w-full outline-none transition-all duration-200 ease-linear', required: true %>
    </div>
    <div class="flex flex-col justify-center items-center">
      <%= label_tag :image_prompt, "Enter an image prompt" %><br>
      <%= text_field_tag :image_prompt, nil, class: 'rounded border-0 w-full outline-none transition-all duration-200 ease-linear', required: true %>
    </div>
    <%= submit_tag 'Generate', class: 'cursor-pointer inline-block px-4 py-2 mb-4 text-white bg-blue-500 shadow rounded hover:bg-green-900 transition-all duration-200 ease-linear' %>
  <% end %>
</div>
