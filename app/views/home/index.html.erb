<div class="flex flex-col items-center justify-center p-4">
<%= form_tag(result_path, method: :get) do %>
    <div class="mb-4">
      <%= label_tag :text_prompt, "Enter a text prompt:" %><br>
      <%= text_field_tag :text_prompt, nil, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:shadow-outline', required: true %>
    </div>
    <div class="mb-4">
      <%= label_tag :image_prompt, "Enter an image prompt:" %><br>
      <%= text_field_tag :image_prompt, nil, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:shadow-outline', required: true %>
    </div>
    <%= submit_tag 'Generate Story', class: 'inline-block px-4 py-2 mb-4 text-white bg-green-500 rounded hover:bg-green-600' %>
  <% end %>
</div>
