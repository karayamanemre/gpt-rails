<div class="w-full max-w-md mt-5 p-5 bg-white rounded-md shadow-lg">
  <%= form_tag(result_path, method: :get, class: "w-full max-w-md mt-5") do %>
    <div class="flex flex-col justify-center items-center w-full text-prompt">
      <%= label_tag :text_prompt, "Enter a text prompt", class: "font-bold" %><br>
      <%= text_field_tag :text_prompt, nil, class: 'rounded border-1 w-full outline-none transition-all duration-200 ease-linear text-prompt'%>
    </div>
    <%= submit_tag 'Generate', class: 'cursor-pointer inline-flex items-center justify-center w-full max-w-md px-4 py-2 mt-5 text-white bg-purple-500 border border-transparent rounded-md font-semibold text-xs uppercase tracking-widest hover:bg-purple-600 active:bg-purple-700 focus:outline-none focus:border-purple-700 focus:ring focus:ring-purple-300 disabled:opacity-25 transition ease-in-out duration-150' %>
  <% end %>
</div>
