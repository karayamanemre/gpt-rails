<div class="flex flex-col items-center justify-center p-4 bg-white m- rounded-xl">
  <%= link_to 'Back to Home', root_path, class: 'inline-block px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-600' %>
  <% if @generated_image %>
    <div class="p-5 h-[512px] w-[512px]">
      <%= image_tag(@generated_image, alt: "Generated Image", class: "h-full w-full") %>
    </div>
  <% end %>
  <% if @generated_text %>
    <div class="p-5 h-[512px] w-[512px]">
      <p class="prose max-w-none text-lg leading-relaxed">
        <%= @generated_text %>
      </p>
    </div>
  <% end %>
</div>